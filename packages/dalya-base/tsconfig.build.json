{
  // This config is for emitting declarations (.d.ts) only
  // Actual .ts source files are transpiled via rollup
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "base",
    "rootDir": "./src",
    "sourceMap": false
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["src/**/*.spec.ts*", "src/**/*.test.ts*"]
}
