{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "lib": ["es2020", "dom"],
    "types": ["node", "react", "jest"],
    "isolatedModules": true,
    "paths": {
      "dalya": ["packages/dalya-components/src"],
      "dalya/*": ["packages/dalya-components/src/*"],
      "dalya-styled-engine": ["packages/dalya-tools/src/styled-engine"],
      "dalya-system": ["packages/dalya-tools/src/system"],
      "dalya-types": ["packages/dalya-tools/src/types"],
      "dalya-utils": ["packages/dalya-utils/src"]
    }
  },
  "exclude": ["**/node_modules", "**/base", "examples/"]
}
